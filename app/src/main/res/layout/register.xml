<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/hui1"
    >

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/biao"
        android:layout_marginTop="50dp"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.administrator.gangmaijia.View.MyEditText
            android:inputType="phone"
            android:id="@+id/et_register_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/circlecase_white"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="手机号"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:layout_marginTop="50dp"
            />
        <com.example.administrator.gangmaijia.View.MyEditText
            android:id="@+id/et_register_pwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/circlecase_white"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="输入密码"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            />
        <com.example.administrator.gangmaijia.View.MyEditText
            android:id="@+id/et_register_pwdconfig"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/circlecase_white"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="确认密码"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/circlecase_white"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <com.example.administrator.gangmaijia.View.MyEditText
                android:id="@+id/et_register_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_weight="1"
                android:hint="填写验证码"
                android:textSize="15sp"
                />


            <TextView
                android:id="@+id/tv_register_code"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/circlecase_red"
                android:layout_weight="2"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            >

            <CheckBox
                android:checked="true"
                android:id="@+id/cb_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意"
                />
            <TextView
                android:id="@+id/tv_register_tiaokuang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《服务条款》"
                android:textColor="@color/red"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_register_yiyou"
           android:layout_gravity="right"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号"
            android:textColor="@color/red"
            />
        <TextView
            android:id="@+id/tv_register_next"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/circlecase_red"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            />
    </LinearLayout>
</LinearLayout>
