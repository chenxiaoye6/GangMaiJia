<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/text_color"
        android:paddingTop="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/white_bakc"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户充值"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="4"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/callservice"/>
        <TextView
            android:layout_weight="1"
        android:id="@+id/tv_recharge"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/circlecase_blue"
        android:text="联系客服"
        android:textColor="@color/white"
        android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <TextView
            android:layout_margin="5dp"
            android:text="您可以通过以下方法进行充值："
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" />

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="#18B4ED"
            android:textSize="15sp"
            android:text="1.拨打客户电话，进行指导充值"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" />

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="#18B4ED"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:text="2.农行转账进行充值"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:text="对个人账户"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/textView8" />

        <TextView
            android:text="账号：6228480020473072617"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="户名：赵秀江"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="开户行：中国农行河北支行"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="20dp"
            android:text="对公司账户"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="账号：210 00 1040 019 063"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="收款单位：天津格林世纪广告有限公司"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="开户行：中国农行河北支行"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="#18B4ED"
            android:text="3.通过微信转账："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" />

        <ImageView
        android:layout_weight="10"
        android:src="@mipmap/erweima"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="180dp" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
