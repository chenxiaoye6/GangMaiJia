<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/hui1"
    >

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/biao"
        android:layout_marginTop="50dp"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_registertype_person"
            android:button="@null"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/myselector"
            android:drawableLeft="@mipmap/circle"
            android:text="找货注册"
            android:textColor="@color/hui2"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            />
        <RadioButton
            android:id="@+id/rb_registertype_caigou"
            android:layout_width="match_parent"
            android:button="@null"
            android:layout_height="45dp"
            android:background="@drawable/myselector"
            android:drawableLeft="@mipmap/circle"
            android:text="供应商注册"
            android:textColor="@color/hui2"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            />
        <RadioButton
            android:id="@+id/rb_registertype_jiagong"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:button="@null"
            android:background="@drawable/myselector"
            android:drawableLeft="@mipmap/circle"
            android:text="加工公司注册"
            android:textColor="@color/hui2"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            />
        <RadioButton
            android:id="@+id/rb_registertype_wuliu"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:button="@null"
            android:background="@drawable/myselector"
            android:drawableLeft="@mipmap/circle"
            android:text="物流公司注册"
            android:textColor="@color/hui2"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ly_register_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/red_back"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上一步"
                android:textColor="@color/red"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_registertype_next"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/circlecase_red"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
